set $Locker i3lock -f -t -i ~/Pictures/Wallpapers/xkcd.png && sleep 1
set $Killer ~/.config/i3/graceful_exit.sh

set $mode_system System (o) blackout, (l) lock, (e) logout, (r) reboot, (s) shutdown, (h) hibernate
mode "$mode_system" {
    bindsym o exec --no-startup-id $Locker && xset dpms force off, mode "default"
    bindsym l exec --no-startup-id $Locker && systemctl suspend -i, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate -i, mode "default"
    bindsym e exec --no-startup-id $Killer && i3-msg exit, mode "default" && pkill Xorg
    bindsym r exec --no-startup-id $Killer && systemctl reboot -i, mode "default"
    bindsym s exec --no-startup-id $Killer && systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 1 ppt
        bindsym k resize grow height 10 px or 1 ppt
        bindsym i resize shrink height 10 px or 1 ppt
        bindsym l resize grow width 10 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 1 ppt
        bindsym Down resize grow height 10 px or 1 ppt
        bindsym Up resize shrink height 10 px or 1 ppt
        bindsym Right resize grow width 10 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


